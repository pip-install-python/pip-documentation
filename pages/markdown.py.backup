        # Store to trigger SSE connection
        dcc.Store(
            id={"type": "chat-trigger-sse", "page": page_name}
        ),
        # Chat interface
        PanelGroup(
            id=f"chat-panel-group-{page_name}",
            children=[
                Panel(
                    id=f"chat-messages-panel-{page_name}",
                    children=[
                        dmc.ScrollArea(
                            id=f"chat-area-{page_name}",
                            h="100%",
                            children=dmc.Stack(
                                id={"type": "chat-messages", "page": page_name},
